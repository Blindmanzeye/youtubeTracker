{
  "manifest_version": 3,
  "name": "YouTube Time Tracker",
  "version": "1.0",
  "description": "Tracks how long you're watching YouTube videos.",
  "permissions": [
    "tabs"
  ],
  "host_permissions": [
    "https://www.youtube.com/*",
    "http://localhost:5000/"
  ],
  "background": {
    "service_worker": "script.js"
  },
  "action": {
    "default_title": "YouTube Tracker"
  }
}
